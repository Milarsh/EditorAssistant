APP_NAME="Editor Assistant"

# База данных
POSTGRES_DB=editor_assistant
POSTGRES_USER=editor
POSTGRES_PASSWORD=editor_pwd_dev
DB_HOST=db
DB_PORT=5432

# Сетевые лимиты и таймауты
READ_TIMEOUT_SEC=15          # таймаут чтения входящих HTTP-запросов
RATE_LIMIT=60                # запросов за окно
RATE_WINDOW=60               # окно в секундах
FETCH_TIMEOUT=10             # таймаут исходящих запросов для RSS/VK/TG

# Telegram (обязателен api_id, api_hash: https://my.telegram.org)
API_ID=
API_HASH=
TG_SESSION=telegram.session
TG_FETCH_LIMIT=100
TG_SLEEP_ON_FLOOD=60
QR_TIMEOUT_SECONDS=120
WINDOW_SEC=10                # окно поиска родителя/детей для медиа-постов в Telegram
TG_AUTH_SUBMIT_TIMEOUT=10

# VK (необходимо получить токен (сервисный ключ доступа) из настроек VK-приложения: https://id.vk.com/business/go)
VK_TOKEN=
VK_API_VERSION=5.131
VK_THROTTLE_SEC=0.35

# Авторизация веб-интерфейса
AUTH_ENABLED=true
PASSWORD_MIN_LEN=8
AUTH_CODE_LEN=6
AUTH_CODE_TTL_MIN=30
MAX_SEND_PER_CODE=5
MAX_INPUT_ATTEMPTS=5
SESSION_TTL_DAYS=30
ROLLING_TTL_ON_TOUCH=true
