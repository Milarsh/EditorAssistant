APP_NAME="Editor Assistant"

# База данных
POSTGRES_DB=editor_assistant
POSTGRES_USER=editor
POSTGRES_PASSWORD=editor_pwd_dev
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql+psycopg://editor:editor_pwd_dev@db:5432/editor_assistant

# Ограничение количества запросов к серверу
RATE_LIMIT=60
RATE_WINDOW=60

# Интервал парсинга
POLL_INTERVAL=300

# Ограничение времени (в секундах) на запросы RSS и VK парсеров
FETCH_TIMEOUT=10

# VK
VK_TOKEN=
VK_API_VERSION=5.131
VK_THROTTLE_SEC=0.35

# Telegram
API_ID=
API_HASH=
TG_SESSION=telegram.session
TG_FETCH_LIMIT=100
TG_SLEEP_ON_FLOOD=60
QR_TIMEOUT_SECONDS=120
# временное окно, в котором осуществляется поиск родительского поста для медиа-постов
# или дочерних медиа-постов для главного поста
WINDOW_SEC=10
TG_AUTH_SUBMIT_TIMEOUT=10

# Авторизация
AUTH_ENABLED=false
PASSWORD_MIN_LEN=8
AUTH_CODE_LEN=6
AUTH_CODE_TTL_MIN=30
MAX_SEND_PER_CODE=5
MAX_INPUT_ATTEMPTS=5
SESSION_TTL_DAYS=30
ROLLING_TTL_ON_TOUCH=true
AUTH_CODE_PEPPER=dev-pepper-change-me

# SMTP (Simple Mail Transfer Protocol)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_TLS=true
SMTP_TIMEOUT=30
MAIL_STRICT=false
MAIL_ASYNC=false
